@if (this.Product is not null)
{
    <tr>
        <td>
            <NavLink href="@($"product/{Product.Id}")">
                @Product.Name
            </NavLink>
        </td>
        <td>@Product.Brand</td>
        <td>@Product.Price.ToString("C2")</td>
    </tr>
}

@code {

    [Parameter]
    public Product Product { get; set; }

}
